<div class="my-32">
    <div class="mb-12 text-center">
        <h2 class="text-5xl font-bold">
            <span class="hover-underline-effect">Contact me</span>
        </h2>
    </div>

    <form action="javascript:" class="flex flex-col items-center gap-6">
        <div class="bg-gray-900 rounded-lg lg:w-1/2 md:w-3/4 w-full">
            <div class="relative bg-inherit">
                <input  id="email" 
                        name="email" 
                        type="email" 
                        class="peer bg-transparent h-10 w-full rounded-lg text-gray-200 placeholder-transparent ring-2 px-2 ring-gray-500 focus:ring-sky-600 focus:outline-none focus:border-rose-600" 
                        placeholder="Your e-mail address"
                        autocomplete="off"
                        />
                <label for="email" class="absolute cursor-text left-0 -top-3 text-sm text-gray-500 bg-inherit mx-1 px-1 peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-500 peer-placeholder-shown:top-2 peer-focus:-top-3 peer-focus:text-sky-600 peer-focus:text-sm transition-all">
                    Your e-mail address
                </label>
            </div>
        </div>

        <div class="bg-gray-900 rounded-lg lg:w-1/2 md:w-3/4 w-full">
            <div class="relative bg-inherit">
                <input  id="subject" 
                        name="subject" 
                        type="text" 
                        class="peer bg-transparent h-10 w-full rounded-lg text-gray-200 placeholder-transparent ring-2 px-2 ring-gray-500 focus:ring-sky-600 focus:outline-none focus:border-rose-600" 
                        placeholder="Subject"
                        autocomplete="off"
                        />
                <label for="subject" class="absolute cursor-text left-0 -top-3 text-sm text-gray-500 bg-inherit mx-1 px-1 peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-500 peer-placeholder-shown:top-2 peer-focus:-top-3 peer-focus:text-sky-600 peer-focus:text-sm transition-all">
                    Subject
                </label>
            </div>
        </div>

        <div class="bg-gray-900 rounded-lg lg:w-1/2 md:w-3/4 w-full">
            <div class="relative bg-inherit">
                <textarea   id="message" 
                            name="message" 
                            class="peer bg-transparent h-52 w-full rounded-lg text-gray-200 placeholder-transparent ring-2 p-2 ring-gray-500 focus:ring-sky-600 focus:outline-none focus:border-rose-600" 
                            placeholder="Your message"
                            autocomplete="off"
                />
                <label for="message" class="absolute cursor-text left-0 -top-3 text-sm text-gray-500 bg-inherit mx-1 px-1 peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-500 peer-placeholder-shown:top-2 peer-focus:-top-3 peer-focus:text-sky-600 peer-focus:text-sm transition-all">
                    Your message
                </label>
            </div>
        </div>

        <button class="px-6 py-3 bg-gray-200 text-black rounded-lg hover:scale-110 active:scale-90 transition-transform ease-in-out duration-200">Send message</button>
    </form>
    
</div>
