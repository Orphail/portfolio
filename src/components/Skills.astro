---
import SkillGroup from "./SkillGroup.astro";
import frontendSkills from "../frontend.json";
import backendSkills from "../backend.json";
import dbSkills from "../dbs.json";

---

<div class="my-32">
    <div class="mb-12 text-center">
        <h2 class="text-5xl font-bold">
            <span class="hover-underline-effect">Skills</span>
        </h2>
    </div>
    
    <div class="">
        <SkillGroup name="Frontend" skills={frontendSkills} icon="mdi:code-braces" />
        <SkillGroup name="Backend" skills={backendSkills} icon="mdi:code" />
        <SkillGroup name="Databases" skills={dbSkills} icon="mdi:database-outline" />
    </div>
</div>
