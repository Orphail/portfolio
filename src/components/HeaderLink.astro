---
import Icon from 'astro-icon';

export interface Props {
	href: string;
	name: string;
    external: string;
}

const { href, name, external } = Astro.props as Props;

---


<a  href={href} target={external ? '_blank' : '_self'}
    class="flex items-center justify-center text-gray-900 dark:text-gray-100"
>
    <span class="relative after:absolute dark:after:bg-gray-200 after:bg-gray-900 after:bottom-0 after:left-0 after:h-[2px] after:w-full after:origin-bottom-left after:scale-x-100 hover:after:origin-bottom-right hover:after:scale-x-0 after:transition-transform after:ease-in-out after:duration-300">
        {name}
    </span>
    <Icon class={`ml-2 ${external === "true" ? 'block' : 'hidden'}`} pack="mdi" name="open-in-new" size="20"/>
</a>